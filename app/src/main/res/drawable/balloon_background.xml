<!-- res/drawable/balloon_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/balloonColor" />

    <!-- Borda arredondada para criar o efeito de balão de conversa -->
    <corners android:radius="16dp" />

    <!-- Adiciona uma sombra para destacar o balão -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
