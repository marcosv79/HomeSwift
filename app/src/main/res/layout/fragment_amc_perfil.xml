<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".amcPerfilFragment">

    <Button
        android:id="@+id/btn_logout_client"
        android:layout_width="87dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:text="Logout"
        android:textSize="12sp"
        android:gravity="start"
        android:background="@drawable/rounded_et_bck"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hs"/>

    <EditText
        android:id="@+id/et_name_amc_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_email_amc_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="220dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_password_amc_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="Nova palavra-passe"
        android:inputType="textPassword"
        android:layout_marginTop="290dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_address_amc_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="Morada"
        android:inputType="text"
        android:layout_marginTop="360dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <Spinner
        android:id="@+id/spinner_location_amc_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="430dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/location"
        android:background="@drawable/rounded_et_bck"/>

    <Button
        android:id="@+id/btn_save_amc_perfil"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textSize="16sp"
        android:layout_marginTop="520dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bck"/>

</FrameLayout>