<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ampPerfilFragment">

    <Button
        android:id="@+id/btn_logout_provider"
        android:layout_width="89dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:text="Logout"
        android:fontFamily="@font/nunibold"
        android:textSize="12sp"
        android:gravity="start"
        android:background="@drawable/rounded_et_bck"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hs"/>

    <EditText
        android:id="@+id/et_name_amp_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/nunibold"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_email_amp_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/nunibold"
        android:layout_marginTop="190dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_password_amp_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="Nova palavra-passe"
        android:inputType="textPassword"
        android:fontFamily="@font/nunibold"
        android:layout_marginTop="260dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_address_amp_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="Morada"
        android:fontFamily="@font/nunibold"
        android:inputType="text"
        android:layout_marginTop="330dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <Spinner
        android:id="@+id/spinner_location_amp_perfil"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="400dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nunibold"
        android:layout_gravity="center_horizontal"
        android:entries="@array/location"
        android:background="@drawable/rounded_et_bck"/>

    <Spinner
        android:id="@+id/spinner_service_amp_perfil"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="470dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nunibold"
        android:layout_marginLeft="56dp"
        android:entries="@array/service"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_cost_amp_perfil"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="470dp"
        android:fontFamily="@font/nunibold"
        android:hint="Custo"
        android:paddingLeft="10dp"
        android:layout_marginLeft="255dp"
        android:inputType="number"
        android:background="@drawable/rounded_et_bck"/>

    <Button
        android:id="@+id/btn_save_amp_perfil"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textSize="16sp"
        android:fontFamily="@font/nunibold"
        android:layout_marginTop="540dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bck"/>

</FrameLayout>