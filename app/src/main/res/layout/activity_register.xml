<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.RegisterActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hs"/>

    <TextView
        android:id="@+id/register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registar"
        android:textSize="27dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    <EditText
        android:id="@+id/name_et"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Nome"
        android:paddingLeft="15dp"
        android:ems="10"
        android:fontFamily="@font/nunibold"
        android:inputType="text"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/email_et"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="E-mail"
        android:paddingLeft="15dp"
        android:ems="10"
        android:fontFamily="@font/nunibold"
        android:inputType="textEmailAddress"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/password_et"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Palavra-passe"
        android:paddingLeft="15dp"
        android:ems="10"
        android:fontFamily="@font/nunibold"
        android:inputType="textPassword"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_et_bck"/>

    <Spinner
        android:id="@+id/spinner_user_type"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="460dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nunibold"
        android:layout_centerHorizontal="true"
        android:entries="@array/user_types"
        android:background="@drawable/rounded_et_bck"/>

    <Button
        android:id="@+id/btn_register_ra"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Seguinte"
        android:textSize="16sp"
        android:layout_marginTop="570dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nunibold"
        android:background="@drawable/btn_bck"/>

</RelativeLayout>
