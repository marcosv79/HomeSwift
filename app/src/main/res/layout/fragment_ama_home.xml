<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".amaHomeFragment">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hs"/>

    <TextView
        android:id="@+id/welcome_admin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunibold"
        android:text=""
        android:textSize="26dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="120dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllReviews"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="200dp"
        android:layout_below="@id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/noOrdersMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não existem avaliações para verificar"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp" />


</FrameLayout>