<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ampPedidosFragment">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hs"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de pedidos"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />

    <Spinner
        android:id="@+id/spinnerFilterOrderStatus"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/rounded_et_bck"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPedidos"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:fontFamily="@font/nunibold"
        android:layout_marginTop="220dp"
        android:layout_height="match_parent"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/noOrdersMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neste momento nÃ£o existem pedidos"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp" />

</FrameLayout>