<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hs"/>

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sessão"
        android:textSize="27dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    <EditText
        android:id="@+id/email_et_la"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="E-mail"
        android:paddingLeft="15dp"
        android:ems="10"
        android:fontFamily="@font/nunibold"
        android:inputType="textEmailAddress"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_et_bck"
        />

    <EditText
        android:id="@+id/password_et_la"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Palavra-passe"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="@font/nunibold"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_et_bck"/>

    <Button
        android:id="@+id/btn_login_la"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Seguinte"
        android:textSize="16sp"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/nunibold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bck"/>

    <TextView
        android:id="@+id/create_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem conta? Criar agora"
        android:textSize="16sp"
        android:layout_below="@id/btn_login_la"
        android:fontFamily="@font/nunibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

</RelativeLayout>