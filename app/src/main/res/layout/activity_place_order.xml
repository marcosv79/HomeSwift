<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PlaceOrderActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hs"/>

    <EditText
        android:id="@+id/et_providerName_placeOrder"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_service_placeOrder"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="220dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_cost_placeOrder"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="290dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"/>

    <EditText
        android:id="@+id/et_date_placeOrder"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:paddingLeft="10dp"
        android:hint="Data do pedido"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_et_bck"
        android:focusable="false"
        android:clickable="true"
        android:ems="10" />

    <Spinner
        android:id="@+id/spinner_typeService_placeOrder"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="430dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/typeService"
        android:background="@drawable/rounded_et_bck"/>

    <Button
        android:id="@+id/btn_placeOrder"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Criar pedido"
        android:textSize="16sp"
        android:layout_marginTop="520dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bck"/>

</FrameLayout>
