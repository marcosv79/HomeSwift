<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HS"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/hs" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/hs" />

        <activity
            android:name=".OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".MessageAdapter"
            android:exported="false" />
        <activity
            android:name=".Views.PlaceOrderActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Chat_Layout"
            android:exported="false" />
        <activity
            android:name=".Controllers.ProviderPageActivity"
            android:exported="false" />
        <activity
            android:name=".Views.contatos_amc"
            android:exported="false" />
        <activity
            android:name=".Controllers.MainAdminActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.MainProviderActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.MainClientActivity"
            android:exported="false" />
        <activity
            android:name=".StartActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Controllers.MyFirebaseMessagingService"
            android:exported="false"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>